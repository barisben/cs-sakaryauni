@model List<Book>

@{
    ViewData["Title"] = "View Component'den Gelen Kitaplar";
}

<h1>Kitaplar ViewComponent</h1>

@if (Model.Count() > 0)
{
    <ol>
        @foreach (var book in Model)
        {
            <li>@book.BookTitle</li>
        }
    </ol>
}
else {
    @:<div>Yazara ait herhangi bir kitap bulunamadi.</div>
}