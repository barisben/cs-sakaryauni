@model List<First.Models.Ogrenci>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<table class="table-striped" width="100%">
    <tr>
        <th>Ogrenci Ad</th>
        <th>Ogrenci Soyad</th>
        <th>Ogrenci No</th>
    </tr>
@foreach (var ogr in @Model)
{
    <tr>
        <td>@ogr.OgrAd</td> 
        <td>@ogr.OgrSoyad</td>
        <td>@Html.ActionLink(ogr.OgrNo, "OgrDuzenle", "Ogrenci", new { id= ogr.OgrNo })</td>
    </tr>
}
</table>